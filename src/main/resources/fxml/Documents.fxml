<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<AnchorPane fx:id="apContent" prefHeight="579.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DocumentController">
   <stylesheets>
      <URL value="@css/colors.css" />
      <URL value="@css/documents.css" />
   </stylesheets>
   <children>
      <HBox layoutY="28.0" prefHeight="50.0" prefWidth="800.0" styleClass="hbox-top" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
            <JFXComboBox fx:id="cbDocTipo" labelFloat="true" prefWidth="300.0" promptText="Tipo de Documento" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <styleClass>
                  <String fx:value="combo-box" />
                  <String fx:value="combo-box-base" />
               </styleClass>
            </JFXComboBox>
            <JFXTextField fx:id="tfNumero" alignment="TOP_LEFT" labelFloat="true" prefWidth="300.0" promptText="Número" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <styleClass>
                  <String fx:value="text-field" />
                  <String fx:value="jfx-text-field-custom" />
               </styleClass>
            </JFXTextField>
            <JFXTextField fx:id="tfNumeroSei" alignment="TOP_LEFT" labelFloat="true" prefWidth="300.0" promptText="Número SEI" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <styleClass>
                  <String fx:value="text-field" />
                  <String fx:value="jfx-text-field-custom" />
               </styleClass>
            </JFXTextField>
            <JFXTextField fx:id="tfProcesso" alignment="TOP_LEFT" labelFloat="true" prefWidth="300.0" promptText="Processo" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <styleClass>
                  <String fx:value="text-field" />
                  <String fx:value="jfx-text-field-custom" />
               </styleClass>
            </JFXTextField>
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="102.0" prefHeight="50.0" prefWidth="800.0" styleClass="hbox-actions" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
            <JFXButton fx:id="btnSalvar" onAction="#handleSave" prefHeight="50.0" prefWidth="300.0" styleClass="button-secondary" text="Salvar">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </JFXButton>
            <JFXButton fx:id="btnEditar" onAction="#handleEdit" prefHeight="50.0" prefWidth="300.0" styleClass="button-secondary" text="Editar">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </JFXButton>
            <JFXButton fx:id="btnDeletar" onAction="#handleDelete" prefHeight="50.0" prefWidth="300.0" styleClass="button-secondary" text="Deletar">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="152.0" prefHeight="50.0" prefWidth="800.0" styleClass="hbox-search" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
            <Pane prefWidth="100.0" HBox.hgrow="ALWAYS" />
            <Pane prefWidth="100.0" HBox.hgrow="ALWAYS" />
              <JFXTextField fx:id="tfBuscar" alignment="TOP_LEFT" labelFloat="true" prefWidth="300.0" promptText="Pesquisar" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <styleClass>
                  <String fx:value="text-field" />
                  <String fx:value="jfx-text-field-custom" />
               </styleClass></JFXTextField>
            <JFXButton fx:id="btnBuscar" minWidth="100.0" onAction="#handleList" prefHeight="50.0" styleClass="button-secondary" text="Buscar" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin></JFXButton>
         </children>
      </HBox>
      <HBox layoutX="14.0" layoutY="235.0" prefHeight="300.0" prefWidth="800.0" styleClass="table-view" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
            <TableView fx:id="tvDocumentos" HBox.hgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="tcId" prefWidth="75.0" text="id" />
                  <TableColumn fx:id="tcNum" prefWidth="75.0" text="numero" />
                  <TableColumn fx:id="tcProc" prefWidth="75.0" text="processo" />
                  <TableColumn fx:id="tcNumSei" prefWidth="75.0" text="sei" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </HBox>
   </children>
</AnchorPane>
